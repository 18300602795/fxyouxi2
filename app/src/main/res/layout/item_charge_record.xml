<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        style="@style/line_split_color"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/text_sub_gray"
            android:text="充值金额："
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_cost_yuan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="￥100"
            android:textColor="@color/money_color"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"
            android:lines="1"
            android:ellipsize="end"/>

    </TableRow>

    <View
        android:id="@+id/v_game_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>

    <TableRow
        android:id="@+id/tr_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/text_sub_gray"
                android:text="游戏："
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="植物大战僵尸"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_black"
                android:textSize="@dimen/text_normal"
                android:lines="1"
                android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/text_sub_gray"
                android:text="支付方式："
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="微信支付"
                android:textColor="@color/text_main_black"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_normal"
                android:lines="1"
                android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/text_sub_gray"
            android:text="订单号: "
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_orderid"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="541212541521"
            android:textColor="@color/text_main_black"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/text_sub_gray"
            android:text="交易时间: "
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2017/5/5 11:44"
            android:gravity="center_vertical"
            android:textColor="@color/text_main_black"
            android:textSize="@dimen/text_normal"/>

    </TableRow>



</TableLayout>