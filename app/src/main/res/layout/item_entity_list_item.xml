<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/game_list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">
        <ImageView
            android:id="@+id/iv_game_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/common_margin">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小熊U盘"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_title"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="市场价:88元"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_gray"
                android:layout_marginRight="5dp"

                />
            <TextView
                android:id="@+id/tv_request_score"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000积分"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_hint"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_exchange"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:text="兑换"
            android:textSize="@dimen/text_content"
            android:textColor="@color/white"
            android:clickable="false"
            android:background="@drawable/shape_circle_rect_blue"
            />
    </LinearLayout>

    <View
        style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        />
</LinearLayout>