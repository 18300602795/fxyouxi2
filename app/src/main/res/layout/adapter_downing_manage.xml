<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <View
        android:id="@+id/v_line"
        style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">
        <com.liang530.views.imageview.roundedimageview.RoundedImageView
            android:id="@+id/iv_game_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="16dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/common_margin">
            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_game_name"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_title"
                android:singleLine="true"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_down_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="100k/50M"
                    android:textSize="@dimen/text_hint"
                    android:textColor="@color/text_gray"
                    />
                <TextView
                    android:id="@+id/tv_down_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0B/S"
                    android:textSize="@dimen/text_hint"
                    android:textColor="@color/text_gray"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="@dimen/size10"
                android:layout_marginTop="3dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/down_pb_style" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/delete"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/ll_down_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_down_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/resume"

                />
            <TextView
                android:id="@+id/tv_down_status"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_hint"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>