<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_comm"
    android:orientation="vertical">
    <View
        android:id="@+id/tab_line"
        style="@style/line_split_color"
        android:layout_height="8dp"
        android:visibility="gone"/>
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        app:tl_bar_color="#ffffff"
        app:tl_indicator_color="#71c13e"
        app:tl_indicator_corner_radius="8dp"
        app:tl_textsize="15sp"
        app:tl_bar_stroke_width="1dp"
        app:tl_bar_stroke_color="#cccccc"
        android:visibility="gone"/>
    <View
        style="@style/line_split_color"
        android:layout_height="8dp"/>
    <com.liang530.views.viewpager.SViewPager
        android:id="@+id/vp_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>