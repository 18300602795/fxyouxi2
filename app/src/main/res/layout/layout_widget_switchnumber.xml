<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_money_text_pre"
    android:orientation="horizontal">

    <TextView
        android:layout_width="30dp"
        android:padding="0dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_widget_number_down"
        android:background="@color/white"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="21sp" />
    <View android:layout_width="0.5dp" android:layout_height="match_parent"
        android:background="@color/gray"/>/
    <com.etsdk.app.huov7.view.AileEditText
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:id="@+id/et_widget_number"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:text="0"
        android:textColor="@color/gray"

        android:textSize="@dimen/text_content" />
    <View android:layout_width="0.5dp" android:layout_height="match_parent"
        android:background="@color/line_gray"/>/
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_widget_number_up"
        android:background="@color/bg_blue"
        android:gravity="center"
        android:padding="0dp"
        android:text="ï¼‹"
        android:textColor="@color/white"
        android:textSize="21sp" />

</LinearLayout>