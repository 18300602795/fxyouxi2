<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/game_list_item">
    <View
        style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">
        <com.liang530.views.imageview.roundedimageview.RoundedImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/syicon"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/common_margin">
            <TextView
                android:id="@+id/tv_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_game_name"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_title"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余："
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_hint"
                    />
                <ProgressBar
                    android:id="@+id/pb_download"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="35dp"
                    android:layout_height="7dp"
                    android:layout_centerInParent="true"
                    android:max="100"
                    android:progress="20"
                    android:background="@drawable/shape_bg_coupon_progress"
                    android:progressDrawable="@drawable/coupon_progressbar_style" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_hint"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="345万人在玩"
                android:textColor="@color/text_lowgray"
                android:textSize="@dimen/text_hint"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/iv_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smlq"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>