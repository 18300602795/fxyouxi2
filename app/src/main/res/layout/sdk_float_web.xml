            android:layout_marginLeft="5dip"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingBottom="6dip"
            android:paddingRight="8dip"
            android:paddingTop="6dip"
            android:textColor="@android:color/white" />
