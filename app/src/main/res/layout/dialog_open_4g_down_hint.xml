<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:drawableLeft="@mipmap/warn"
        android:drawablePadding="5dp"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前未连接wifi，是否去开启非wifi下载？"
        android:textSize="@dimen/text_content"
        android:textColor="@color/text_black"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <View style="@style/line_color_drak"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/cb_record_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不再提示"
        android:textSize="12sp"
        android:textColor="@color/text_gray"
        android:button="@null"
        android:background="@null"
        android:drawableLeft="@drawable/select_checkbox"
        android:drawablePadding="5dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/shape_round5_stroke_blue_white"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="去开启"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_circle_rect_blue"
            />
    </LinearLayout>
</LinearLayout>