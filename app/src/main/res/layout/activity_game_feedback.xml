<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:context="com.etsdk.app.huov7.ui.GameFeedbackActivity">
    <include layout="@layout/include_comm_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择举报类别"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginTop="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_report_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    </android.support.v7.widget.RecyclerView>
    <EditText
        android:id="@+id/et_feedbackContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:hint="请描述您遇到的问题……"
        android:textSize="@dimen/text_content"
        android:textColor="@color/text_black"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="top|left"
        />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/bg_blue"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"
        />
</LinearLayout>
