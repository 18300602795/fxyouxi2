<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_do_score_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <com.liang530.views.imageview.roundedimageview.RoundedImageView
        android:id="@+id/iv_mineHead"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/bg_game"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_margin"
        app:riv_corner_radius="65dp"
        />
    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />
    <View style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_content"
                android:text="我的积分"
                />
        </LinearLayout>
        <View
            style="@style/line_color_v"/>
        <TextView
            android:id="@+id/tv_scoreRank"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="积分排行"
            android:gravity="center"
            android:textSize="@dimen/text_content"
            android:textColor="@color/text_black"
            />
    </LinearLayout>
    <View
        style="@style/line_split_color"/>
</LinearLayout>