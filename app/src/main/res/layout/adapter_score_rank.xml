<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_hot_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_bg_ring"
        android:text="1"
        android:textColor="@color/bg_blue"
        android:textSize="@dimen/text_content"
        android:gravity="center"
        android:layout_marginRight="10dp"
        />

    <com.liang530.views.imageview.roundedimageview.RoundedImageView
        android:id="@+id/iv_mineHead"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/bg_game"
        app:riv_corner_radius="65dp"
        />
    <TextView
        android:id="@+id/tv_nickName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/test_game_name"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_black"
        android:layout_margin="8dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_scoreNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="0"
            android:textSize="@dimen/text_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_hint"
            android:text="他的积分"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>