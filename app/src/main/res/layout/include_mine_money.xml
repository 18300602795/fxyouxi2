<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View style="@style/line_split_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的钱包"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_normal"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@mipmap/credit_card"
        android:drawablePadding="5dp"
        android:gravity="center"
        />
    <View
        style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_goto_doTask"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_content"
                android:gravity="left"
                android:paddingRight="10dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/tv_my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_normal"
                android:text="0"
                />

        </LinearLayout>
        <View
            style="@style/line_color_v"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/common_margin"
            />
        <LinearLayout
            android:id="@+id/ll_mine_coupon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代金券"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/tv_coupon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_normal"
                android:text="0张"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_money"
        style="@style/line_color"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_mine_gift"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="礼包"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_content"
                android:gravity="left"
                android:paddingRight="10dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/tv_gift_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_normal"
                android:text="0个"
                />

        </LinearLayout>
        <View
            style="@style/line_color_v"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/common_margin"
            />
        <LinearLayout
            android:id="@+id/ll_tgyTask"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广员系统"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_normal"
                android:text=""
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>