<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/game_list_item">
    <View
        android:id="@+id/v_line"
        style="@style/line_color"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">
        <TextView
            android:id="@+id/tv_hot_rank"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_bg_ring"
            android:text="1"
            android:maxLength="3"
            android:textColor="@color/bg_blue"
            android:textSize="@dimen/text_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
        <com.liang530.views.imageview.roundedimageview.RoundedImageView
            android:id="@+id/iv_game_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="16dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="6dp">
            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_game_name"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_title"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                />
            <com.etsdk.app.huov7.view.GameTagView
                android:id="@+id/gameTagView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.etsdk.app.huov7.view.GameTagView>
            <TextView
                android:id="@+id/tv_oneword"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大话西游重温金典"
                android:textColor="@color/text_lowgray"
                android:textSize="@dimen/text_hint"
                android:singleLine="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:text="充值"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_content"
            android:textColor="@color/white"
            android:background="@drawable/shape_circle_rect_blue"
            />
    </LinearLayout>
</LinearLayout>



