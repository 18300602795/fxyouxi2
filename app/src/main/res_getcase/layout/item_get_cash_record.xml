<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="提   现  id："
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/text_black_CC"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="提现账户："
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/text_black_CC"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="提现金额："
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/money_color"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"/>

    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="申请时间："
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/text_black_CC"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="审核状态："
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_check_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/text_black_CC"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>
    <TableRow
        android:id="@+id/tr_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="拒绝原因："
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/money_color"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

    </TableRow>

    <View
        android:id="@+id/line_reason"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_lowgray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/line_lowgray"/>

</TableLayout>