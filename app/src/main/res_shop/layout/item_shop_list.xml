<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <com.liang530.views.imageview.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/common_margin"
            app:riv_corner_radius="15dp"/>

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:text="游戏名称"
            android:textColor="@color/text_black"
            android:textSize="17sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_toRightOf="@+id/iv_icon"/>

        <TextView
            android:id="@+id/tv_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区服信息"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_centerVertical="true"
            android:textColor="@color/orange_1"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述描述描述"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:lines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_money_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥80"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/red1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="65dp"
                android:background="@drawable/shape_circle_rect_green_deep"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="购买"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_cancel_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="65dp"
                android:background="@drawable/shape_round_stroke_green"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="取消收藏"
                android:textSize="15sp"
                android:textColor="@color/text_green"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>


    <View
        style="@style/line_split_color"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上架时间：2017-9-9 "
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_money_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥80"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/red1"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:background="@drawable/shape_round_stroke_oringe"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="删除"
            android:textColor="@color/orange_1"
            android:visibility="gone"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:background="@drawable/shape_round_stroke_oringe"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="取消出售"
            android:textColor="@color/orange_1"
            android:visibility="gone"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:background="@drawable/shape_round_stroke_oringe"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="修改"
            android:textColor="@color/orange_1"
            android:visibility="gone"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/common_margin"/>

    </LinearLayout>

    <View
        style="@style/line_split_color"
        android:layout_height="@dimen/bold_line"/>

</LinearLayout>