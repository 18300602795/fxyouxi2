<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_gift_background_white"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多操作"
            android:textColor="@color/class_color2"
            android:textSize="@dimen/text_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <View style="@style/line_color"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            />
        <TextView
            android:id="@+id/tv_cancel_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消出售"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_title"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_delete_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_title"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:visibility="gone"/>
        <View style="@style/line_color"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            />
        <TextView
            android:id="@+id/tv_edit_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改内容"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_title"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            />
        <View style="@style/line_color"
            android:id="@+id/line_edit"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_title"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />
    </LinearLayout>
</LinearLayout>